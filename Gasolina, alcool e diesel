# ury

#include<stdio.h>
#include<stdlib.h>
main(){
    
    int op, alcool=0, gasolina=0, diesel=0;
    
    // vinculo para executar as operacoes, quando digitar o numero 4 vai sair do programa
    while(op!=4){
        scanf("%d",&op);

        // aqui vai somar os valores de acordo com a opcao do usuario

        if (op==1)
            alcool++;
        else if (op==2)
            gasolina++;
        else if (op==3)
            diesel++;
        else if (op==4){ // encerrar o programa 
            printf("MUITO OBRIGADO\n");
            printf("Alcool: %d\n", alcool);
            printf("Gasolina: %d\n", gasolina);
            printf("Diesel: %d\n", diesel);
      }
    }

    return 0;
}
